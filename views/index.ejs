<!DOCTYPE html>
<html lang="es">
	<%- include('partials/head') %> 
<body> <!--aqui se puede visualizar los productos con su precio , descripcion y mas-->
	<%- include('partials/header') %> 
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper"> <!--el din que contiene los productos con el container y -->
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!--el forEach va a iterar a cada uno de los elementos -->
			<% productsVisited.forEach(producto => { %>
				<div class="col-12 col-sm-6 col-lg-3"> <!--grillas de boosptrap-->
					<section class="product-box">
						<a href="/products/detalle/<%-producto.id%>/<%-producto.category%>">
							<figure class="product-box_image">
								<img src="/images/products/<%-producto.image%> " alt="imagen de producto"> 
								<!-- nos ubicamos donde estan las imagenes y con el tag le pedimos que nos muestre una img-->
							</figure>
							<article class="product-box_data">
								<!--aqui de esta forma vemos el descuento que se aplica al producto-->
								<h2>$<%-(producto.price - producto.price * producto.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %></h2>
								<% if (producto.discount != 0) { %> <!--aqui nos dice si el descuento es diferente de 0 nos muestre el porsentaje en producto.discount-->
									<span><%-producto.discount%>%OFF</span>
								<% } %>

								<p><%-producto.name%></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>


		</div>
	</div>
	<!-- /ultima visita --> 

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<% productsInSale.forEach(producto => { %>
				<div class="col-12 col-sm-6 col-lg-3"> <!--grillas de boosptrap-->
					<section class="product-box">
						<a href="/products/detalle/<%-producto.id%>/<%-producto.category%>">
							<figure class="product-box_image">
								<img src="/images/products/<%-producto.image %>" alt="imagen de producto"> 
								<!-- nos ubicamos donde estan las imagenes y con el tag le pedimos que nos muestre una img-->
							</figure>
							<article class="product-box_data">
								<!--aqui de esta forma vemos el descuento que se aplica al producto-->
								<h2>$<%-(producto.price - producto.price * producto.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".")%></h2>
								<% if (producto.discount != 0) { %> <!--aqui nos dice si el descuento es diferente de 0 nos muestre el porsentaje en producto.discount-->
									<span><%-producto.discount%>%OFF</span>
								<% } %>
								<p><%-producto.name%></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
		</div>
	</div>
	<!-- /Ofertas -->

<%- include('partials/footer') %> 
<%- include('partials/scripts') %> 
</body>
</html>
